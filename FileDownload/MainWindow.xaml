<Window x:Class="FileDownload.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileDownload"
        mc:Ignorable="d"
        Title="MainWindow" Height="314" Width="467">
    <Grid>
        <Button x:Name="buttonDownload" Content="Загрузить файл" HorizontalAlignment="Center" Margin="0,87,0,0" VerticalAlignment="Top" Width="131" Height="29" Click="buttonDownload_Click"/>
        <ProgressBar x:Name="pbDownload" HorizontalAlignment="Center" Height="16" Margin="0,177,0,0" VerticalAlignment="Top" Width="309"/>
        <Button x:Name="buttonCancel" Content="Отмена" HorizontalAlignment="Center" VerticalAlignment="Top" Width="131" Height="30" Margin="0,214,0,0" Click="buttonCancel_Click"/>


    </Grid>
</Window>
